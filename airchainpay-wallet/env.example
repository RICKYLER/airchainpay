# AirChainPay Wallet Environment Configuration

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
EXPO_ENV=development

# =============================================================================
# BLOCKCHAIN RPC URLs (Required for all 4 supported chains)
# =============================================================================
# Base Sepolia Network (Ethereum L2)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Core Testnet Network (Core)
CORE_TESTNET_RPC_URL=https://rpc.test2.btcs.network

# Morph Holesky Testnet Network
MORPH_HOLESKY_RPC_URL=https://holesky.drpc.org

# Lisk Sepolia Testnet Network
LISK_SEPOLIA_RPC_URL=https://rpc.sepolia-api.lisk.com

# =============================================================================
# BLOCK EXPLORER API KEYS (Optional but recommended)
# =============================================================================
# Get from https://basescan.org/apis
BASESCAN_API_KEY=your_basescan_api_key_here

# Get from https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# RPC PROVIDER API KEYS (Optional but recommended for production)
# =============================================================================
# Infura - Get from https://infura.io
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Alchemy - Get from https://alchemy.com
ALCHEMY_API_KEY=your_alchemy_api_key_here

# QuickNode - Get from https://quicknode.com
QUICKNODE_API_KEY=your_quicknode_api_key_here

# =============================================================================
# RELAY SERVER CONFIGURATION
# =============================================================================
# Local development relay server
RELAY_SERVER_URL=http://localhost:4000

# Relay server API key for authentication
RELAY_API_KEY=your_relay_api_key_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug logging
DEBUG=true

# Enable development features
ENABLE_DEV_FEATURES=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption key for sensitive data (generate a secure random key)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT secret for authentication (generate a secure random key)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Default network for the wallet
DEFAULT_NETWORK=base_sepolia

# Enable testnet mode
TESTNET_MODE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable BLE features
ENABLE_BLE=true

# Enable camera features
ENABLE_CAMERA=true

# Enable biometric authentication
ENABLE_BIOMETRIC=true

# Enable offline transactions
ENABLE_OFFLINE_TX=true

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Enable crash reporting
ENABLE_CRASH_REPORTING=false

# Enable analytics
ENABLE_ANALYTICS=false

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# App name override
APP_NAME=AirChainPay Wallet

# App version override
APP_VERSION=1.0.0

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# EAS project ID
EAS_PROJECT_ID=6ddaf098-0540-4a9e-befa-09814a2e6e45

# Build configuration
BUILD_TYPE=development